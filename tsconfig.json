{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "jsx": "react",
      "module": "esNext",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "removeComments": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "build",
      "lib": ["es6", "es7", "dom"],
      "baseUrl": "./src/",
      "allowSyntheticDefaultImports": true,
      "types": ["node"],
      "skipLibCheck": true
    },
    "exclude": ["dist", "node_modules", "test"]
  }
  